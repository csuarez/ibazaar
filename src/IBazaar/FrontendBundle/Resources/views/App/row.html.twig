<a href="{{ path('app_profile', {'id' : app.id}) }}">
<div class="row">
    <div class="col-lg-3 text-center">
  		<p><img src="{{ app.logoUrl }}" alt="" width="100" height="100"></p>
  		<span class="label label-success">
      {% if app.isFree %}
        GRATIS
      {% else %}
        {{ app.price }} â‚¬
      {% endif %}
      </span>
  	</div>
  	<div class="col-lg-9">
  		<h4>{{ app.name }}</h4>
  		<small class="text-muted">{{ app.downloads }} descargas // {{ app.createdAt | date }}</small>
