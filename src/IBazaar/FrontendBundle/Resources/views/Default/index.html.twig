{% extends 'IBazaarFrontendBundle::base.html.twig' %}
{% block content %}
<div class="jumbotron">
  <h1>¡Bienvenido a iBazaar!</h1>
  <p>Comienza a explorar la mejor selección de apps para iPhone y iPad:</p>
  <div class="row">
  	<div class="col-lg-10">
		<input class="form-control input-lg" type="text" placeholder="Introduce el nombre de una app">
  	</div>
  	<div class="col-lg-2">
  		<a class="btn btn-primary btn-lg" role="button">Buscar</a>
  	</div>
  </div>
</div>
<div class="row">
	<div class="col-lg-8">
		<h2>
			<ul class="nav nav-tabs">
			  <li class="active"><a href="#">Más descargadas</a></li>
			  <li><a href="#">Novedades</a></li>
			</ul>
		</h2>
		<div class="col-lg-12">
			<ul class="list-group">
		  		{% for app in topAppsByDownloads %}
		  		<li class="list-group-item">
		  			<div class="row">
			  		    <div class="col-lg-3 text-center">
					  		<p><img src="{{ app.logoUrl }}" alt="" width="100" height="100"></p>
					  		<span class="label label-success">{{ app.price }} €</span>
					  	</div>
					  	<div class="col-lg-9">
					  		<h4>{{ app.name }}</h4>
					  		<small class="text-muted">{{ app.downloads }} descargas // {{ app.createdAt | date }}</small>
					  		<p>{{ app.description }}</p>
					  		{% for category in app.categories %}
					  		    <span class="label label-default">{{ category.name }}</span>
					  		{% endfor %}
					  	</div>
					</div>
		  		</li>
		  		{% endfor %}
			</ul>
		</div>
	</div>
	<div class="col-lg-4">
		<h2>Categorías</h2>
		<div class="row text-center">
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
		</div>
		<div class="row text-center">
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
		</div>
		<div class="row text-center">
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
			<div class="col-lg-4"><h3><span class="label label-default col-lg-12">New</span></h3></div>
		</div>
		<div class="row">
			<div class="col-lg-12 text-right"><a href="#">Ver más</a></div>
		</div>
	</div>
</div>
{% endblock %}